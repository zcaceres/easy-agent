{
  "name": "easy-agent",
  "version": "0.1.0",
  "description": "A simple Typescript framework to build and run tool-wielding AI Agents.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "ai",
    "agents",
    "anthropic",
    "claude"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/bun": "latest",
    "@types/express": "^4.17.21",
    "@types/jsdom": "^21.1.7",
    "@types/yargs": "^17.0.33",
    "husky": "^9.1.4",
    "rollup": "^4.21.2",
    "tslib": "^2.7.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.0",
    "@google-cloud/speech": "^6.7.0",
    "colors": "^1.4.0",
    "express": "^4.19.2",
    "jsdom": "^24.1.1",
    "node-cache": "^5.1.2",
    "node-record-lpcm16": "^1.0.1",
    "say": "^0.16.0",
    "yargs": "^17.7.2"
  },
  "scripts": {
    "start": "bun run src/example.cli.ts",
    "voice": "bun run src/example.cli.ts --voice",
    "debug": "bun run src/example.cli.ts --debug",
    "cli": "bun run src/example.cli.ts",
    "add-agent": "bun run scripts/add-agent.ts",
    "add-tool": "bun run scripts/add-tool.ts",
    "server": "bun run src/example.server.ts",
    "build": "rollup -c",
    "prepublishOnly": "npm run build",
    "test": "bun test --test-mode",
    "postinstall": "mkdir -p session-log && mkdir -p logs",
    "check-types": "tsc --noEmit --project tsconfig.json ",
    "check-for-api-key": "bun run ./scripts/check-for-api-key.ts",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=14.17.0"
  }
}
