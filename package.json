{
  "name": "easy-agent",
  "version": "0.1.0",
  "description": "A very simple Typescript framework to build tool-wielding AI Agents.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "ai",
    "agents",
    "anthropic",
    "claude"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/express": "^4.17.21",
    "@types/jsdom": "^21.1.7",
    "@types/yargs": "^17.0.33",
    "husky": "^9.1.4"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.0",
    "colors": "^1.4.0",
    "express": "^4.19.2",
    "jsdom": "^24.1.1",
    "node-cache": "^5.1.2",
    "yargs": "^17.7.2"
  },
  "scripts": {
    "start": "bun run src/example.cli.ts",
    "debug": "bun run src/example.cli.ts --debug-mode",
    "cli": "bun run src/example.cli.ts",
    "server": "bun run src/example.server.ts",
    "build": "bun build --outdir dist --target node --project tsconfig.json ./src/index.ts",
    "test": "bun test",
    "postinstall": "mkdir -p session-log && mkdir -p logs",
    "check-types": "tsc --noEmit --project tsconfig.json ",
    "check-for-api-key": "bun run check-for-api-key.ts",
    "prepare": "husky",
    "prepublishOnly": "bun run build"
  },
  "engines": {
    "node": ">=14.17.0"
  }
}
